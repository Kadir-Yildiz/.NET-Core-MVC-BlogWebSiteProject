@inject UserManager<ApplicationUser> _userManager;
@model List<ApplicationUser>
@{
	ViewData["Title"] = "Users";
}

<table class="table">	
	<thead>
		<tr>
			<th>User Name</th>
			<th>Display Name</th>
			<th>Roles</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.UserName</td>
				<td>@item.DisplayName</td>
				<td>@string.Join(", ", await _userManager.GetRolesAsync(item))</td>
			</tr>
		}
	</tbody>
	
</table>
